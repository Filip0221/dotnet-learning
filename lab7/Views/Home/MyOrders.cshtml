@model IEnumerable<lab7.Models.Invoice>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyOrders</title>
</head>
<body>

<div class="container mt-4">
    <h2 class="text-center mb-4">My Orders</h2>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.InvoiceId)</th>
                <th>@Html.DisplayNameFor(model => model.InvoiceDate)</th>
                <th>@Html.DisplayNameFor(model => model.BillingAddress)</th>
                <th>@Html.DisplayNameFor(model => model.Total)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="OrderDetails" asp-route-id="@item.InvoiceId">
                        @item.InvoiceId
                    </a>
                </td>
                <td>
                    @item.InvoiceDate.ToShortDateString()
                </td>
                <td>
                    @($"{item.BillingAddress}, {item.BillingCity}, {item.BillingState}, {item.BillingCountry}")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    <a asp-action="OrderDetails" asp-route-id="@item.InvoiceId">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

</body>
</html>
